<?xml version="1.0"?>
<launch>

    <arg name="x" default="0.0"/>
    <arg name="y" default="0.0"/>
    <arg name="z" default="0.0"/>
    <arg name="roll" default="0.0"/>
    <arg name="pitch" default="0.0"/>
    <arg name="yaw" default="0.0"/>

    <arg name="urdf_robot_model" default=""/>
    <arg name="robot_name" default=""/>

    <!-- send the robot XML to param server -->
    <param name="robot_description_aruco" command="cat $(arg urdf_robot_model)"/>

    <!-- push robot_description to factory and spawn robot in gazebo -->
    <node name="$(arg robot_name)_urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="  -urdf 
                                            -x $(arg x)
                                            -y $(arg y) 
                                            -z $(arg z) 
                                            -R $(arg roll) 
                                            -P $(arg pitch) 
                                            -Y $(arg yaw) 
                                            -model $(arg robot_name) 
                                            -param robot_description_aruco" />

</launch>